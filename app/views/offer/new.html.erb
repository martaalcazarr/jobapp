<h1>Nueva oferta</h1>
<%= form_for(@offer) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "Crear oferta" %>
  </div>
<% end %>